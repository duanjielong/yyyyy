<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="#FFFFFFFF"
             android:id="@+id/blurry2"
             android:layout_marginTop="20dp"
             tools:context=".MainActivity">


    <!-- Here, we customize the blurring view with values different from the defaults. -->


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/blurred_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/blurry3"
        android:layout_width="100dp"
        android:scaleType="fitXY"
        android:layout_height="100dp"
        android:src="@drawable/bj_b"/>
    </RelativeLayout>
    <com.fivehundredpx.blurdemo.BlurringView
        android:id="@+id/blurring_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        app:blurRadius="11"
        app:downsampleFactor="6"
        app:overlayColor="#29FFFFFF"/>
    </FrameLayout>
    <TextView
        android:id="@+id/tv_1"
        android:text="oooooooo"
        android:textSize="20dp"
        android:textColor="#ff00ff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</FrameLayout>
